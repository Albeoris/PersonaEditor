<UserControl x:Class="PersonaEditorGUI.Controls.TreeViewPE"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonaEditorGUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <TreeView SelectedItemChanged="TreeView_SelectedItemChanged"
                  DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext}"
                  ItemsSource="{Binding}" DataContextChanged="TreeView_DataContextChanged">
        <TreeView.ContextMenu>
            <ContextMenu ItemsSource="{Binding Path=ContextMenuItems}"></ContextMenu>
        </TreeView.ContextMenu>

        <TreeView.ItemTemplate>
            <HierarchicalDataTemplate ItemsSource="{Binding Path=SubItems}">
                <TextBlock Text="{Binding Path=Header}" AllowDrop="True" MouseLeave="TextBlock_MouseLeave" MouseEnter="TextBlock_MouseEnter"/>
            </HierarchicalDataTemplate>
        </TreeView.ItemTemplate>
        <TreeView.ItemContainerStyle>
            <Style TargetType="TreeViewItem">
                <EventSetter Event="PreviewKeyDown" Handler="TreeView_PreviewKeyDown"/>
                <EventSetter Event="PreviewKeyUp" Handler="TreeView_PreviewKeyUp"/>
                <EventSetter Event="Drop" Handler="TreeViewItem_Drop"/>
                <EventSetter Event="MouseEnter" Handler="TextBlock_MouseEnter"/>
                <EventSetter Event="PreviewMouseDoubleClick" Handler="TreeViewItem_PreviewMouseDoubleClick"/>
            </Style>
        </TreeView.ItemContainerStyle>
    </TreeView>
</UserControl>